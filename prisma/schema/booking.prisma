model Booking {
  id         String        @id @default(uuid())
  guests     Int           @default(1)
  status     BookingStatus @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  totalPrice Int
  currency   String        @default("USD")
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  listing   Listing @relation(fields: [listingId], references: [id])
  listingId String

  tourist   Tourist @relation("TouristBookings", fields: [touristId], references: [id])
  touristId String

  guide   Guide  @relation("GuideBookings", fields: [guideId], references: [id])
  guideId String

  payment Payment?
  review  Review?

  bookingDate   Availability @relation(fields: [bookingDateId], references: [id])
  bookingDateId String       @unique

  @@map("bookings")
}
